<% if user != current_user %>
    <% if current_user.friend?(user) %>
        <%= link_to '取消交友', friendship_path(user), method: :delete, class: "btn btn-danger" %>
    <% else %>
        <%= link_to '邀請交友', friendships_path(friend_id: user), method: :post, class: "btn btn-default" %>
    <% end %>
<% end %>